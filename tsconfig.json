{
  "compilerOptions": {
    "module": "commonjs",
    "charset": "utf8",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "target": "es2018",
    "outDir": ".build",
    "rootDir": "./",
    "baseUrl": "./",
    "esModuleInterop":true,
    "lib": [
      "es2018",
      "dom"
    ],
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true
  },
  "ts-node": {
    "esm": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "buildOnSave": false,
  "typeRoots": [
    "node_modules/@types"
],
}
